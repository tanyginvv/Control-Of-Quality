{
  "id": "product",
  "description": "Product object that is returned in respose",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^([1-9]+[0-9]+)$"
    },
    "category_id": {
      "type": "string",
      "pattern": "^([1-9]|1[0-5])$"
    },
    "title": { "type": "string" },
    "alias": { "type": "string" },
    "content": { "type": "string" },
    "price": {
      "type": "string",
      "pattern": "^([0-9]+)$"
    },
    "old_price": {
      "type": "string",
      "pattern": "^([0-9]+)$"
    },
    "status": {
      "enum": [ "0", "1" ]
    },
    "keywords": { "type": "string" },
    "description": { "type": "string" },
    "hit": {
      "enum": [ "0", "1" ]
    }
  }
}